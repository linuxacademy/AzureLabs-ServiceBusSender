@model List<AzureLabsServiceBusSender.Models.UploadedImageViewModel>
@{
    ViewBag.Title = "Saved";
}
<div class="row">
    <div class="col-md-12">
        <h2>Saved Images</h2>
        <p>These are images that have been saved after uploading.</p>
        <p>Newly saved photos may not appear immediately, because the Azure Function that moves them has not completed its task. Wait a few seconds, refresh this page, and you should see the saved image appear.</p>
    </div>
</div>
<div class="row">
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <div class="col-md-3">
                <a href="@item.ImageUrl"><img src="@item.ThumbnailUrl" alt="@item.ImageName" /></a>
            </div>
        }
    }
    else
    {
        <div class="col-md-12">
            <p>No images have been saved yet. @Html.ActionLink("Manage photos", "Manage", null, new {@class="btn btn-primary"}).</p>
        </div>
    }
</div>